<Page
    x:Class="clockUIFinal.Stopwatch"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:clockUIFinal"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="49*"/>
            <ColumnDefinition Width="207*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Style="{StaticResource MyTextblockStyle}" x:Name="TimerLog" HorizontalAlignment="Left" VerticalAlignment="Center" Width="600" Height="400" RequestedTheme="Default" FocusVisualSecondaryBrush="#994D099E" Margin="95,0,0,0" Grid.Column="1"/>
        <Frame HorizontalAlignment="Left" VerticalAlignment="Top">
            <Button x:Name="starttimer" Style="{StaticResource MyButtonStyle}" Content="Start Timer" HorizontalAlignment="Center" Margin="10,10,0,10" VerticalAlignment="Center" Click="Button_Click"/>
        </Frame>
        <Button x:Name="stoptimer" Style="{StaticResource MyButtonStyle}" Content="Stop timer" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="103,10,57,0"/>

    </Grid>
</Page>
